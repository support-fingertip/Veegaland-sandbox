<apex:page >
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
        }
        .container {
            text-align: center;
            max-width: 1000px;
            margin: 0 auto;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .header img {
            height: 50px;
        }
        .buttons {
            margin: 20px 0;
        }
        .buttons button {
            color: #a9b428;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            margin: 0 10px;
            cursor: pointer;
            font-size: 16px;
        }
        .buttons button:hover {
            background-color: #a9b428;
        }
        .image-container img {
            max-width: 100%;
            border: 2px solid #ddd;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>

    <div class="container">
        <div class="header">
            <img src="{!URLFOR($Resource.VeegaLand)}" alt="Veegaland Logo" />
            <h1>Parking Layout</h1>
            <img src="{!URLFOR($Resource.QueensparkLogo)}" alt="Queens Park Logo" />
        </div>

        <div class="buttons">
            <button onclick="showImage('ground')">Ground Floor Plan</button>
            <button onclick="showImage('first')">First Floor Plan</button>
        </div>

        <div class="image-container">
            <img id="parkingImage" src="{!URLFOR($Resource.Groundfloor)}" alt="Ground Floor Parking" />
        </div>
    </div>

    <script>
        function showImage(floor) {
            const imgElement = document.getElementById('parkingImage');
            if (floor === 'ground') {
                imgElement.src = '{!URLFOR($Resource.Groundfloor)}';
            } else if (floor === 'first') {
                imgElement.src = '{!URLFOR($Resource.FirstFloor)}';
            }
        }
    </script>
</apex:page>