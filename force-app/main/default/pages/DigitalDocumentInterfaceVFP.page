<apex:page Controller="DigitalDocumentInterfaceVFPController">
    <style>
        .site-skip-content {
        position: relative;
        z-index: 10001;
        }
        @media (min-width: 48em) {
        .site-logo {
        margin-top: 12px;
        font-size: 20px;
        font-weight: bold;
        }
        }
        
        @media (min-width: 48em) {
        .site-logo .site-logo__graphic {
        height: 4.25rem;
        }
        @media (min-width: 48em) {
        .site-banner {
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        justify-content: center;
        align-items: center;
        gap: 10px;
        padding: 8px;
        border: var(--lwc-borderWidthThin, 1px) solid var(--slds-g-color-border-base-1, var(--lwc-pageHeaderColorBorder, rgb(201, 201, 201)));
        -ms-flex-direction: column;
        text-align: center;
        }
        }
        .site {
        margin-top: 10px;
        font-size: .875rem;
        line-height: 1.7142857143;
        color: #5876a3;
        }
    </style>
    <body>
        <div class="site-banner" role="banner">
            <div class="">
                <img src="{!$Resource.veegaland}" width="100px" height="50px" />
            </div>
            <div class="site-logo">
                Digital Document Approval 
            </div>
        </div>
    </body>
    
    <!-- Include Lightning Experience -->
    <apex:includeLightning />
    
    <div id="lightningvf"></div>
    
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        $Lightning.use("c:DigitalDocumentAcceptanceInterface", function() {
            $Lightning.createComponent(
                "c:digitalDocumentAcceptanceLWC",
                {
                    siteurl: "https://site-speed-6226--postsbox1.sandbox.my.salesforce-sites.com/apex",
                    responsestatusfield: "Cost_Sheet_Acceptance_Status__c",
                    responseremarksfield:"Cost_Sheet_Acceptance_Comments__c",
                    objectname: "Quote__c",
                    vfpname: "VeegalandQuotePdf",
                    recordid: "{!recordId}",
                    enablesignaturepad:true,
                    disableApprovalComments:true,
                },
                "lightningvf",
                function(cmp) {
                    console.log("LWC Component was created successfully");
                }
            );
        });
    });
    </script>
</apex:page>